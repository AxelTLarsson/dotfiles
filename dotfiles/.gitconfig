[user]
        email = mail@axellarsson.nu
        name = AxelTLarsson
        signingkey = 27B8DF6F75DCFDC3
[push]
        default = matching
[credential]
        helper = cache --timeout=18000
[core]
        editor = nvim
        excludesfile = /home/axel/.gitignore_global
        pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
        co = checkout
        ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"

[color "diff-highlight"]
        oldNormal = red bold
        oldHighlight = red bold 52
        newNormal = green bold
        newHighlight = green bold 22

[color "diff"]
        meta = 227
        frag = magenta bold
        commit =  227 bold
        old = red bold
        new = green bold
        whitespace = red reverse
[gpg]
        program = gpg1
[commit]
        gpgsign = false
